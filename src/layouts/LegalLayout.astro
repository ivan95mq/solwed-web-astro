---
import Layout from './Layout.astro';
import Header from '../islands/Header';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  currentPage: string;
}

const { title, description, currentPage } = Astro.props;

const legalPages = [
  {
    title: 'Política de Privacidad',
    href: '/legal/privacidad',
    description: 'Cómo protegemos tus datos'
  },
  {
    title: 'Política de Cookies',
    href: '/legal/cookies',
    description: 'Uso de cookies en nuestro sitio'
  },
  {
    title: 'Términos y Condiciones',
    href: '/legal/terminos',
    description: 'Condiciones de uso del servicio'
  },
  {
    title: 'Política de Cancelación',
    href: '/legal/cancelacion',
    description: 'Proceso de cancelación'
  },
  {
    title: 'Devoluciones y Reembolsos',
    href: '/legal/devoluciones',
    description: 'Condiciones de devolución'
  },
  {
    title: 'Registro de Dominios',
    href: '/legal/registro-dominios',
    description: 'Política de registro de dominios'
  },
];

const currentPageTitle = legalPages.find(page => page.href === currentPage)?.title || 'Documento Legal';
---

<Layout title={title} description={description}>
  <Header client:load />

  <div class="min-h-screen bg-gradient-to-b from-background to-muted/20 pt-20 sm:pt-24">
    <!-- Header with breadcrumbs -->
    <div class="border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 sticky top-16 sm:top-20 z-40">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center gap-2 text-sm text-muted-foreground">
          <a href="/" class="hover:text-foreground transition-colors">
            Inicio
          </a>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
          <a href="/legal/privacidad" class="hover:text-foreground transition-colors">
            Legal
          </a>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-foreground font-medium">
            {currentPageTitle}
          </span>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4 py-12">
      <div class="grid lg:grid-cols-[280px_1fr] gap-8 lg:gap-12">
        <!-- Sidebar Navigation -->
        <aside class="lg:sticky lg:top-36 self-start">
          <div class="space-y-6">
            <!-- Legal Section Header -->
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                </svg>
                <h2 class="font-semibold text-lg">Información Legal</h2>
              </div>
              <p class="text-sm text-muted-foreground">
                Documentos y políticas de Solwed
              </p>
            </div>

            <!-- Navigation Links -->
            <nav class="space-y-1">
              {legalPages.map((page) => {
                const isActive = currentPage === page.href;
                return (
                  <a
                    href={page.href}
                    class:list={[
                      'group flex items-start gap-3 rounded-lg p-3 transition-all',
                      'hover:bg-primary/5 hover:border-primary/20 border border-transparent',
                      isActive && 'bg-primary/10 border-primary/30 shadow-sm'
                    ]}
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class:list={['w-5 h-5 mt-0.5 transition-colors', isActive ? 'text-primary' : 'text-muted-foreground group-hover:text-primary']} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <div class="flex-1 space-y-1">
                      <div class:list={['text-sm font-medium transition-colors', isActive ? 'text-foreground' : 'text-foreground/80 group-hover:text-foreground']}>
                        {page.title}
                      </div>
                      <div class="text-xs text-muted-foreground">
                        {page.description}
                      </div>
                    </div>
                  </a>
                );
              })}
            </nav>

            <!-- Help Section -->
            <div class="rounded-lg border bg-card p-4 space-y-2">
              <p class="text-sm font-medium">¿Necesitas ayuda?</p>
              <p class="text-xs text-muted-foreground">
                Si tienes preguntas sobre nuestras políticas, contáctanos.
              </p>
              <a
                href="/contacto"
                class="inline-flex items-center text-xs font-medium text-primary hover:underline"
              >
                Contactar ahora
                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </aside>

        <!-- Main Content -->
        <main class="min-w-0">
          <div class="legal-content rounded-lg border bg-card shadow-sm p-8 lg:p-12">
            <slot />
          </div>
        </main>
      </div>
    </div>
  </div>

  <Footer />
</Layout>
