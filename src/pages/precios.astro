---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { STAR_PRODUCT, HOSTING_PLANS, ERP_PLANS, ADDON_SERVICES } from '../lib/catalog';
---

<MarketingLayout
  title="Precios | SOLWED - Tu Departamento Digital Completo"
  description="Precios transparentes sin sorpresas. Web + ERP + CRM + IA + Hosting desde 150€/mes. Sin permanencia."
>
  <!-- Star Product -->
  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Precios <span class="text-gradient">transparentes</span>
        </h1>
        <p class="text-xl text-muted-foreground">
          Sin sorpresas, sin letra pequena. Elige el plan que mejor se adapte a tu negocio.
        </p>
      </div>

      <!-- Star Product Card -->
      <div class="max-w-4xl mx-auto mb-16">
        <div class="rounded-3xl border-2 border-primary/30 bg-card star-glow overflow-hidden">
          <div class="p-8 bg-gradient-to-br from-primary/10 via-primary/5 to-transparent">
            <div class="flex items-center gap-3 mb-4">
              <h2 class="text-2xl font-bold">{STAR_PRODUCT.name}</h2>
              <span class="px-3 py-1 rounded-full text-sm font-medium bg-primary text-primary-foreground">
                Servicio Estrella
              </span>
            </div>
            <p class="text-muted-foreground">{STAR_PRODUCT.tagline}</p>
          </div>
          <div class="p-8">
            <div class="grid md:grid-cols-2 gap-8">
              <div>
                <div class="mb-6">
                  <p class="text-sm text-muted-foreground mb-2">Pago mensual</p>
                  <div class="flex items-baseline gap-2">
                    <span class="text-4xl font-black">{STAR_PRODUCT.pricing.monthly?.price}€</span>
                    <span class="text-muted-foreground">/mes</span>
                  </div>
                  <a
                    href={STAR_PRODUCT.pricing.monthly?.stripeLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center mt-4 h-12 px-6 font-medium rounded-md border border-border bg-background hover:bg-muted transition-all"
                  >
                    Contratar mensual
                  </a>
                </div>
                <div class="pt-6 border-t border-border">
                  <p class="text-sm text-muted-foreground mb-2">Pago anual (2 meses gratis)</p>
                  <div class="flex items-baseline gap-2">
                    <span class="text-4xl font-black">{STAR_PRODUCT.pricing.annual?.price}€</span>
                    <span class="text-muted-foreground">/ano</span>
                  </div>
                  <p class="text-sm text-primary font-medium mt-1">{STAR_PRODUCT.pricing.annual?.savings}</p>
                  <a
                    href={STAR_PRODUCT.pricing.annual?.stripeLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center mt-4 h-12 px-6 font-medium rounded-md bg-primary text-primary-foreground hover:bg-primary/80 transition-all shine-effect"
                  >
                    Contratar anual
                  </a>
                </div>
              </div>
              <div>
                <h3 class="font-semibold mb-4">Todo incluido:</h3>
                <ul class="space-y-2">
                  {STAR_PRODUCT.features.map((feature) => (
                    <li class="flex items-start gap-2 text-sm">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Individual Plans -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-center mb-8">Servicios Individuales</h2>

        <!-- Hosting Plans -->
        <h3 class="text-xl font-semibold mb-4">Hosting WordPress</h3>
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          {HOSTING_PLANS.map((plan) => (
            <div class="rounded-2xl border border-border bg-card p-6">
              <div class="mb-4">
                {plan.badge && (
                  <span class="px-2 py-1 rounded text-xs font-medium bg-primary/20 text-primary mb-2 inline-block">
                    {plan.badge}
                  </span>
                )}
                <h4 class="text-lg font-bold">{plan.name}</h4>
                <p class="text-sm text-muted-foreground">{plan.tagline}</p>
              </div>
              <div class="flex items-baseline gap-1 mb-4">
                <span class="text-3xl font-black">{plan.pricing.monthly?.price}€</span>
                <span class="text-muted-foreground">/mes</span>
              </div>
              <ul class="space-y-2 mb-6">
                {plan.features.slice(0, 4).map((feature) => (
                  <li class="flex items-start gap-2 text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <a
                href={plan.pricing.monthly?.stripeLink}
                target="_blank"
                rel="noopener noreferrer"
                class="block w-full text-center py-2 px-4 rounded-md border border-border hover:bg-muted transition-all text-sm font-medium"
              >
                Contratar
              </a>
            </div>
          ))}
        </div>

        <!-- ERP Plans -->
        <h3 class="text-xl font-semibold mb-4">ERP + Facturacion</h3>
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          {ERP_PLANS.map((plan) => (
            <div class="rounded-2xl border border-border bg-card p-6">
              <div class="mb-4">
                {plan.badge && (
                  <span class="px-2 py-1 rounded text-xs font-medium bg-primary/20 text-primary mb-2 inline-block">
                    {plan.badge}
                  </span>
                )}
                <h4 class="text-lg font-bold">{plan.name}</h4>
                <p class="text-sm text-muted-foreground">{plan.tagline}</p>
              </div>
              <div class="flex items-baseline gap-1 mb-4">
                <span class="text-3xl font-black">{plan.pricing.monthly?.price}€</span>
                <span class="text-muted-foreground">/mes</span>
              </div>
              <ul class="space-y-2 mb-6">
                {plan.features.slice(0, 4).map((feature) => (
                  <li class="flex items-start gap-2 text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <a
                href={plan.pricing.monthly?.stripeLink}
                target="_blank"
                rel="noopener noreferrer"
                class="block w-full text-center py-2 px-4 rounded-md border border-border hover:bg-muted transition-all text-sm font-medium"
              >
                Contratar
              </a>
            </div>
          ))}
        </div>

        <!-- Addons -->
        <h3 class="text-xl font-semibold mb-4">Servicios Adicionales</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {ADDON_SERVICES.map((addon) => (
            <div class="rounded-2xl border border-border bg-card p-6">
              <div class="flex justify-between items-start">
                <div>
                  <h4 class="text-lg font-bold">{addon.name}</h4>
                  <p class="text-sm text-muted-foreground">{addon.description}</p>
                </div>
                <div class="text-right">
                  <span class="text-2xl font-black">
                    {addon.pricing.monthly?.price || addon.pricing.annual?.price}€
                  </span>
                  <span class="text-muted-foreground text-sm">
                    /{addon.pricing.monthly?.period || addon.pricing.annual?.period}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <p class="text-muted-foreground mb-4">
          Necesitas un proyecto personalizado?
        </p>
        <a
          href="/contacto"
          class="inline-flex items-center justify-center h-12 px-8 font-medium rounded-md bg-primary text-primary-foreground hover:bg-primary/80 transition-all"
        >
          Solicitar presupuesto
        </a>
      </div>
    </div>
  </section>
</MarketingLayout>
