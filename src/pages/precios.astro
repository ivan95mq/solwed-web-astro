---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { STAR_PRODUCT, HOSTING_PLANS, ERP_PLANS, EMAIL_PLANS, ADDON_SERVICES } from '../lib/catalog';
import { PricingCard, StarProductCard } from '../islands/PricingCard';
import FloatingCart from '../islands/FloatingCart';
---

<MarketingLayout
  title="Precios | SOLWED - Tu Departamento Digital Completo"
  description="Precios transparentes sin sorpresas. Web + ERP + CRM + IA + Hosting desde 150â‚¬/mes. Sin permanencia."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden py-16 md:py-24">
    <!-- Background decorations -->
    <div class="absolute left-1/4 top-0 h-96 w-96 -translate-x-1/2 -translate-y-1/2 rounded-full bg-primary/10 blur-3xl"></div>
    <div class="absolute right-1/4 bottom-0 h-64 w-64 translate-x-1/2 translate-y-1/2 rounded-full bg-primary/5 blur-3xl"></div>

    <div class="container relative mx-auto px-4">
      <div class="mx-auto max-w-4xl text-center mb-16">
        <h1 class="font-orbitron text-3xl sm:text-4xl font-bold md:text-5xl lg:text-6xl">
          Precios <span class="bg-gradient-to-r from-primary to-primary/60 bg-clip-text text-transparent">transparentes</span>
        </h1>
        <p class="mt-4 text-xl text-muted-foreground">
          Sin sorpresas, sin letra pequena. Elige el plan que mejor se adapte a tu negocio.
        </p>
      </div>

      <!-- Star Product Card -->
      <div class="mx-auto max-w-5xl mb-20">
        <StarProductCard
          client:visible
          name={STAR_PRODUCT.name}
          tagline={STAR_PRODUCT.tagline}
          monthlyPrice={STAR_PRODUCT.pricing.monthly?.price || 0}
          annualPrice={STAR_PRODUCT.pricing.annual?.price || 0}
          annualSavings={STAR_PRODUCT.pricing.annual?.savings || ''}
          features={STAR_PRODUCT.features}
          includedServices={STAR_PRODUCT.includedServices || []}
          productId={STAR_PRODUCT.id}
          priceWithTaxMonthly={STAR_PRODUCT.pricing.monthly?.priceWithTax || 0}
          priceWithTaxAnnual={STAR_PRODUCT.pricing.annual?.priceWithTax || 0}
        />
      </div>

      <!-- Individual Plans -->
      <div class="space-y-16">
        <!-- Hosting Plans -->
        <div>
          <div class="mb-8 text-center">
            <h2 class="font-orbitron text-2xl font-bold md:text-3xl">Web WordPress</h2>
            <p class="mt-2 text-muted-foreground">Hosting gestionado con soporte tecnico incluido</p>
          </div>
          <div class="grid gap-4 sm:gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {HOSTING_PLANS.map((plan, index) => (
              <PricingCard
                client:visible
                name={plan.name}
                tagline={plan.tagline}
                badge={plan.badge}
                monthlyPrice={plan.pricing.monthly?.price}
                annualPrice={plan.pricing.annual?.price}
                productId={plan.id}
                priceWithTaxMonthly={plan.pricing.monthly?.priceWithTax}
                priceWithTaxAnnual={plan.pricing.annual?.priceWithTax}
                features={plan.features}
                delay={index}
              />
            ))}
          </div>
        </div>

        <!-- ERP Plans -->
        <div>
          <div class="mb-8 text-center">
            <h2 class="font-orbitron text-2xl font-bold md:text-3xl">ERP + Facturacion</h2>
            <p class="mt-2 text-muted-foreground">Gestion empresarial con Verifactu incluido</p>
          </div>
          <div class="grid gap-4 sm:gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {ERP_PLANS.map((plan, index) => (
              <PricingCard
                client:visible
                name={plan.name}
                tagline={plan.tagline}
                badge={plan.badge}
                monthlyPrice={plan.pricing.monthly?.price}
                annualPrice={plan.pricing.annual?.price}
                productId={plan.id}
                priceWithTaxMonthly={plan.pricing.monthly?.priceWithTax}
                priceWithTaxAnnual={plan.pricing.annual?.priceWithTax}
                features={plan.features}
                delay={index}
              />
            ))}
          </div>
        </div>

        <!-- Email Plans -->
        <div>
          <div class="mb-8 text-center">
            <h2 class="font-orbitron text-2xl font-bold md:text-3xl">Correo Profesional</h2>
            <p class="mt-2 text-muted-foreground">Email con tu dominio, servidor en Europa</p>
          </div>
          <div class="grid gap-4 sm:gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {EMAIL_PLANS.map((plan, index) => (
              <PricingCard
                client:visible
                name={plan.name}
                tagline={plan.tagline}
                badge={plan.badge}
                monthlyPrice={plan.pricing.monthly?.price}
                annualPrice={plan.pricing.annual?.price}
                productId={plan.id}
                priceWithTaxMonthly={plan.pricing.monthly?.priceWithTax}
                priceWithTaxAnnual={plan.pricing.annual?.priceWithTax}
                features={plan.features}
                delay={index}
              />
            ))}
          </div>
        </div>

        <!-- Addons -->
        <div>
          <div class="mb-8 text-center">
            <h2 class="font-orbitron text-2xl font-bold md:text-3xl">Servicios Adicionales</h2>
          </div>
          <div class="mx-auto grid max-w-3xl gap-4 sm:gap-6 sm:grid-cols-2">
            {ADDON_SERVICES.map((addon, index) => (
              <PricingCard
                client:visible
                name={addon.name}
                tagline={addon.description}
                monthlyPrice={addon.pricing.monthly?.price}
                annualPrice={addon.pricing.annual?.price}
                productId={addon.id}
                priceWithTaxMonthly={addon.pricing.monthly?.priceWithTax}
                priceWithTaxAnnual={addon.pricing.annual?.priceWithTax}
                features={addon.features}
                delay={index}
              />
            ))}
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-20 text-center">
        <div class="mx-auto max-w-2xl rounded-3xl border border-border/50 bg-gradient-to-br from-card/80 to-card/50 p-4 sm:p-6 md:p-8 backdrop-blur-xl">
          <h3 class="font-orbitron text-xl font-bold">Necesitas un proyecto personalizado?</h3>
          <p class="mt-2 text-muted-foreground">
            Hablemos de tu proyecto y te preparamos un presupuesto a medida.
          </p>
          <a
            href="/contacto"
            class="group relative mt-6 inline-flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-gradient-to-r from-primary to-primary/80 px-8 py-4 font-medium text-primary-foreground transition-all duration-300 hover:shadow-lg hover:shadow-primary/25"
          >
            <span class="relative z-10">Solicitar presupuesto</span>
            <div class="absolute inset-0 -translate-x-full bg-gradient-to-r from-transparent via-white/20 to-transparent transition-transform duration-700 group-hover:translate-x-full"></div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Floating Cart -->
  <FloatingCart client:load />
</MarketingLayout>
