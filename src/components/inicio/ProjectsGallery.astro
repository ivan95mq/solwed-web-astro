---
/**
 * Projects Gallery section - replaces Instagram Feed
 * Shows featured projects with links to full portfolio and Instagram
 */
import { projects } from '../../lib/projects';

// Select 8 featured projects for the gallery
const featuredProjects = projects.slice(0, 8);
const totalProjects = projects.length;
---

<section class="py-20 md:py-28">
  <div class="container mx-auto max-w-7xl px-4">
    <!-- Header -->
    <div class="mx-auto mb-12 max-w-2xl text-center md:mb-16">
      <span class="mb-4 inline-block rounded-full bg-primary/10 px-4 py-1.5 text-sm font-medium text-primary">
        +{totalProjects} proyectos
      </span>
      <h2 class="font-orbitron mb-4 text-2xl sm:text-3xl font-bold tracking-tight text-foreground md:text-4xl">
        Proyectos que <span class="text-gradient">inspiran</span>
      </h2>
      <p class="text-lg text-muted-foreground">
        Webs, tiendas online y sistemas de gesti√≥n para empresas reales
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="mx-auto grid max-w-6xl grid-cols-2 gap-2 sm:gap-3 md:gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      {featuredProjects.map((project, index) => (
        <a
          href={`https://${project.domain}`}
          target="_blank"
          rel="noopener noreferrer"
          class="group relative aspect-square overflow-hidden rounded-xl bg-card transition-transform hover:scale-[1.02]"
          style={`animation-delay: ${index * 75}ms`}
        >
          <!-- Project Image -->
          <img
            src={project.image}
            alt={project.title}
            width="400"
            height="400"
            class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
            loading="lazy"
          />

          <!-- Hover Overlay -->
          <div class="absolute inset-0 flex flex-col items-center justify-center bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
            <p class="mb-1 px-3 text-center text-sm font-semibold text-white md:text-base">
              {project.title}
            </p>
            <p class="text-xs text-white/70">
              {project.domain}
            </p>
            <div class="mt-3 flex items-center gap-1 text-xs text-primary">
              <span>Visitar</span>
              <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </div>
          </div>

          <!-- Always visible gradient at bottom for mobile -->
          <div class="pointer-events-none absolute inset-x-0 bottom-0 h-1/3 bg-gradient-to-t from-black/60 to-transparent md:hidden">
            <p class="absolute bottom-2 left-2 right-2 truncate text-xs font-medium text-white">
              {project.title}
            </p>
          </div>
        </a>
      ))}
    </div>

    <!-- CTAs -->
    <div class="mt-12 flex flex-col items-center justify-center gap-4 sm:flex-row">
      <!-- View all projects -->
      <a
        href="/proyectos"
        class="inline-flex items-center gap-2 rounded-full bg-primary px-6 py-3 text-sm font-semibold text-primary-foreground transition-colors hover:bg-primary/90"
      >
        Ver todos los proyectos
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>

      <!-- Instagram link -->
      <a
        href="https://instagram.com/solwed.es"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-full border border-border px-6 py-3 text-sm font-medium text-muted-foreground transition-colors hover:border-pink-500/50 hover:text-pink-400"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
        </svg>
        @solwed.es
      </a>
    </div>
  </div>
</section>
