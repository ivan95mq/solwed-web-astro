---
import { cn } from '../../lib/utils';

const valueProps = [
  {
    icon: 'euro',
    title: 'Ahorra +2.000â‚¬/mes',
    description: 'Sustituye 8+ herramientas por una sola cuota fija',
  },
  {
    icon: 'clock',
    title: 'Activo en 24h',
    description: 'Configuracion rapida. Empiezas a trabajar desde el dia 1',
  },
  {
    icon: 'shield',
    title: 'Sin permanencia',
    description: 'Cancela cuando quieras. Sin penalizaciones ni letra pequena',
  },
  {
    icon: 'headphones',
    title: 'Soporte humano',
    description: 'Respuesta en menos de 24h. En espanol, sin bots',
  },
];
---

<section class="py-16 md:py-24">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <p class="text-sm font-medium text-primary uppercase tracking-wider mb-3">
        Por que Todo en Uno
      </p>
      <h2 class="font-orbitron text-2xl sm:text-3xl md:text-4xl font-bold">
        Un solo proveedor.{' '}
        <span class="text-gradient">Cero dolores de cabeza.</span>
      </h2>
    </div>

    <!-- Value Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
      {valueProps.map((prop, index) => (
        <div
          class={cn(
            'relative p-4 sm:p-6 rounded-2xl',
            'bg-card border border-border/50',
            'hover:border-primary/30 hover:shadow-lg hover:shadow-primary/5',
            'transition-all duration-300',
            'bento-item hover-scale'
          )}
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Icon -->
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4">
            {prop.icon === 'euro' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.121 15.536c-1.171 1.952-3.07 1.952-4.242 0-1.172-1.953-1.172-5.119 0-7.072 1.171-1.952 3.07-1.952 4.242 0M8 10.5h4m-4 3h4m9-1.5a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
            {prop.icon === 'clock' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10" /><polyline points="12 6 12 12 16 14" />
              </svg>
            )}
            {prop.icon === 'shield' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            )}
            {prop.icon === 'headphones' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 18v-6a9 9 0 0118 0v6" /><path stroke-linecap="round" stroke-linejoin="round" d="M21 19a2 2 0 01-2 2h-1a2 2 0 01-2-2v-3a2 2 0 012-2h3zM3 19a2 2 0 002 2h1a2 2 0 002-2v-3a2 2 0 00-2-2H3z" />
              </svg>
            )}
          </div>

          <!-- Content -->
          <h3 class="text-lg font-bold mb-2">{prop.title}</h3>
          <p class="text-sm text-muted-foreground">{prop.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
