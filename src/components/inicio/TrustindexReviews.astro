---
/**
 * TrustindexReviews - Embeds Trustindex widget for Google reviews
 *
 * To use this component, you need a Trustindex widget ID.
 * Get it from: https://admin.trustindex.io/ > Widgets > Get Code
 *
 * Props:
 * - widgetId: Your Trustindex widget ID (e.g., "abc123def456")
 */

interface Props {
  widgetId?: string;
}

const { widgetId } = Astro.props;

// Default widget ID - replace with your actual Trustindex widget ID
const TRUSTINDEX_WIDGET_ID = widgetId || 'REPLACE_WITH_YOUR_WIDGET_ID';
---

<section class="relative overflow-hidden py-20 md:py-28">
  <!-- Background -->
  <div class="absolute inset-0 bg-section-dark"></div>

  <div class="container relative mx-auto max-w-7xl px-4">
    <!-- Header -->
    <div class="mx-auto mb-12 max-w-2xl text-center md:mb-16">
      <span class="mb-4 inline-block rounded-full bg-primary/10 px-4 py-1.5 text-sm font-medium text-primary">
        Opiniones verificadas
      </span>
      <h2 class="font-geist mb-4 text-3xl font-bold tracking-tight text-foreground md:text-4xl">
        Lo que dicen nuestros clientes
      </h2>
      <p class="text-lg text-muted-foreground">
        Reseñas reales de Google Business verificadas por Trustindex
      </p>
    </div>

    <!-- Trustindex Widget Container -->
    <div class="trustindex-widget-container mx-auto max-w-5xl">
      {TRUSTINDEX_WIDGET_ID !== 'REPLACE_WITH_YOUR_WIDGET_ID' ? (
        <div
          class="trustindex-widget"
          data-widget-id={TRUSTINDEX_WIDGET_ID}
          data-no-stars="false"
        >
          <!-- Widget will be loaded here -->
          <div class="flex items-center justify-center py-12">
            <div class="h-8 w-8 animate-spin rounded-full border-4 border-primary border-t-transparent"></div>
          </div>
        </div>
      ) : (
        <div class="rounded-2xl border border-border bg-card p-8 text-center">
          <p class="text-muted-foreground">
            Widget de Trustindex no configurado.
            <br />
            <span class="text-sm">Añade tu widget ID en el componente TrustindexReviews.astro</span>
          </p>
        </div>
      )}
    </div>

    <!-- Link to Google Reviews -->
    <div class="mt-8 text-center">
      <a
        href="https://www.google.com/maps?cid=9604656484379762292"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-sm text-muted-foreground transition-colors hover:text-primary"
      >
        <svg viewBox="0 0 24 24" class="h-5 w-5">
          <path
            fill="#4285F4"
            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
          />
          <path
            fill="#34A853"
            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
          />
          <path
            fill="#FBBC05"
            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
          />
          <path
            fill="#EA4335"
            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
          />
        </svg>
        Ver todas las reseñas en Google
      </a>
    </div>
  </div>
</section>

{TRUSTINDEX_WIDGET_ID !== 'REPLACE_WITH_YOUR_WIDGET_ID' && (
  <script is:inline define:vars={{ widgetId: TRUSTINDEX_WIDGET_ID }}>
    // Load Trustindex widget script
    (function() {
      const script = document.createElement('script');
      script.src = 'https://cdn.trustindex.io/loader.js?'+ widgetId;
      script.async = true;
      script.defer = true;
      document.head.appendChild(script);
    })();
  </script>
)}

<style>
  /* Trustindex widget dark theme overrides */
  .trustindex-widget-container :global(.ti-widget) {
    background: transparent !important;
  }

  .trustindex-widget-container :global(.ti-review-item) {
    background: var(--card) !important;
    border: 1px solid var(--border) !important;
    border-radius: 1rem !important;
  }

  .trustindex-widget-container :global(.ti-review-content),
  .trustindex-widget-container :global(.ti-name) {
    color: var(--foreground) !important;
  }

  .trustindex-widget-container :global(.ti-date) {
    color: var(--muted-foreground) !important;
  }
</style>
