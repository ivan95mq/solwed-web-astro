---
/**
 * Testimonials section with real client reviews
 * Fetches from Google Places API at build time, falls back to hardcoded reviews
 * Uses pure CSS animation for infinite scroll (no JS required)
 */
import { fetchGoogleReviews, type GooglePlaceData } from '../../lib/google-reviews';

interface Review {
  author: string;
  rating: number;
  text: string;
  timeAgo: string;
  avatar?: string;
}

// Fallback reviews - used when Google API is not configured
const fallbackReviews: Review[] = [
  {
    author: "María García",
    rating: 5,
    text: "Excelente servicio, muy profesionales. Nos han diseñado una web espectacular y el ERP funciona de maravilla. Muy recomendables.",
    timeAgo: "hace 2 semanas",
  },
  {
    author: "Carlos Rodríguez",
    rating: 5,
    text: "Llevamos un año con SOLWED y estamos encantados. La atención al cliente es inmejorable y siempre están disponibles para resolver cualquier duda.",
    timeAgo: "hace 1 mes",
  },
  {
    author: "Ana Martínez",
    rating: 5,
    text: "Por fin encontramos una solución todo en uno. Web, CRM y facturación integrados. Nos ha simplificado mucho la gestión del negocio.",
    timeAgo: "hace 1 mes",
  },
  {
    author: "Pedro Sánchez",
    rating: 5,
    text: "El precio es muy competitivo para todo lo que incluye. El primer mes gratis nos permitió probar sin compromiso. Ahora no lo cambiaríamos por nada.",
    timeAgo: "hace 2 meses",
  },
  {
    author: "Laura Fernández",
    rating: 5,
    text: "Profesionalidad y cercanía. Nos han ayudado a digitalizar nuestro pequeño negocio de forma sencilla. Muy contentos con el resultado.",
    timeAgo: "hace 3 meses",
  },
];

// Fetch Google reviews at build time
const googleData: GooglePlaceData | null = await fetchGoogleReviews();

// Use Google data if available, otherwise use fallback
const reviews: Review[] = googleData?.reviews?.length
  ? googleData.reviews.map((r) => ({
      author: r.authorName,
      rating: r.rating,
      text: r.text,
      timeAgo: r.relativeTimeDescription,
      avatar: r.authorPhotoUrl,
    }))
  : fallbackReviews;

// Use up to 5 reviews for carousel
const displayReviews = reviews.slice(0, 5);

const avgRating = googleData?.rating ?? fallbackReviews.reduce((acc, r) => acc + r.rating, 0) / fallbackReviews.length;
const totalReviews = googleData?.totalReviews ?? 50;

// Schema.org for AggregateRating - helps with rich snippets in Google
const aggregateRatingSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "SOLWED",
  "url": "https://solwed.es",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": avgRating.toFixed(1),
    "bestRating": "5",
    "worstRating": "1",
    "ratingCount": totalReviews.toString()
  }
};
---

<!-- Schema.org AggregateRating -->
<script type="application/ld+json" set:html={JSON.stringify(aggregateRatingSchema)} />

<section class="relative overflow-hidden py-20 md:py-28">
  <!-- Background -->
  <div class="absolute inset-0 bg-section-dark"></div>

  <div class="container relative mx-auto max-w-7xl px-4">
    <!-- Header -->
    <div class="mx-auto mb-12 max-w-2xl text-center md:mb-16">
      <span class="mb-4 inline-block rounded-full bg-primary/10 px-4 py-1.5 text-sm font-medium text-primary">
        Opiniones reales
      </span>
      <h2 class="font-geist mb-4 text-3xl font-bold tracking-tight text-foreground md:text-4xl">
        Lo que dicen nuestros clientes
      </h2>
      <p class="text-lg text-muted-foreground">
        {totalReviews}+ opiniones de clientes satisfechos
      </p>

      <!-- Google Rating Summary -->
      <div class="mt-6 flex items-center justify-center gap-2">
        <div class="flex items-center gap-1">
          {[1, 2, 3, 4, 5].map((star) => (
            <svg
              class={`h-5 w-5 ${star <= Math.round(avgRating) ? 'text-yellow-400' : 'text-muted'}`}
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>
        <span class="font-semibold text-foreground">{avgRating.toFixed(1)}</span>
        <span class="text-muted-foreground">en Google</span>
        <svg class="h-5 w-5 text-muted-foreground" viewBox="0 0 24 24" fill="currentColor">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
      </div>
    </div>

    <!-- Reviews Carousel with CSS Animation -->
    <div class="reviews-carousel mx-auto max-w-6xl overflow-hidden">
      <div class="reviews-track">
        {/* Render reviews 3 times for infinite loop effect */}
        {[...displayReviews, ...displayReviews, ...displayReviews].map((review, index) => (
          <article
            class="review-card group relative w-[280px] flex-shrink-0 rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur-sm transition-all hover:border-yellow-400/30 hover:shadow-lg hover:shadow-yellow-400/5 md:w-[420px]"
          >
            {/* Stars */}
            <div class="mb-4 flex gap-0.5">
              {[1, 2, 3, 4, 5].map((star) => (
                <svg
                  class={`h-4 w-4 ${star <= review.rating ? 'text-yellow-400' : 'text-gray-600'}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            {/* Review Text */}
            <p class="mb-4 line-clamp-4 text-gray-300">
              "{review.text}"
            </p>

            {/* Author */}
            <div class="flex items-center gap-3">
              {review.avatar ? (
                <img
                  src={review.avatar}
                  alt={review.author}
                  class="h-10 w-10 rounded-full object-cover"
                  loading="lazy"
                  referrerpolicy="no-referrer"
                />
              ) : (
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-yellow-400/10 text-sm font-semibold text-yellow-400">
                  {review.author.split(' ').map(n => n[0]).join('')}
                </div>
              )}
              <div>
                <p class="font-medium text-white">{review.author}</p>
                <p class="text-sm text-gray-400">{review.timeAgo}</p>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- CTA to leave review -->
    <div class="mt-12 text-center">
      <a
        href="https://g.page/r/SOLWED/review"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-full border border-white/30 bg-white/5 px-6 py-3 text-sm font-medium text-white backdrop-blur-sm transition-all hover:border-white hover:bg-white/10"
      >
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Deja tu opinión en Google
      </a>
    </div>
  </div>
</section>

<style>
  /* CSS-only infinite scroll animation */
  .reviews-carousel {
    mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
  }

  .reviews-track {
    display: flex;
    gap: 2rem;
    animation: scroll 40s linear infinite;
  }

  .reviews-track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }

  /* Line clamp for review text */
  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Reduce animation speed on mobile for better readability */
  @media (max-width: 768px) {
    .reviews-track {
      animation-duration: 30s;
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .reviews-track {
      animation: none;
    }
  }
</style>
