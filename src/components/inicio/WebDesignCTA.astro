---
/**
 * WebDesignCTA - Call to action for custom web design services
 * Promotes the custom design service as an alternative/complement to the star product
 */
import { WEB_DESIGN_SERVICE } from '../../lib/catalog';
---

<section class="relative overflow-hidden py-20 md:py-28">
  <div class="container mx-auto max-w-6xl px-4">
    <div class="relative rounded-3xl border border-border bg-card p-8 md:p-12 lg:p-16">
      <!-- Decorative gradient -->
      <div class="absolute -right-20 -top-20 h-64 w-64 rounded-full bg-primary/10 blur-3xl"></div>
      <div class="absolute -bottom-20 -left-20 h-64 w-64 rounded-full bg-primary/5 blur-3xl"></div>

      <div class="relative grid items-center gap-8 lg:grid-cols-2 lg:gap-12">
        <!-- Content -->
        <div>
          <span class="mb-4 inline-block rounded-full bg-primary/10 px-4 py-1.5 text-sm font-medium text-primary">
            Dise√±o personalizado
          </span>

          <h2 class="font-geist mb-4 text-3xl font-bold tracking-tight text-foreground md:text-4xl lg:text-5xl">
            {WEB_DESIGN_SERVICE.name}
          </h2>

          <p class="mb-6 text-lg text-muted-foreground">
            {WEB_DESIGN_SERVICE.description}
          </p>

          <ul class="mb-8 space-y-3">
            {WEB_DESIGN_SERVICE.features.slice(0, 5).map((feature) => (
              <li class="flex items-start gap-3">
                <span class="flex-shrink-0 rounded-full bg-primary/20 p-1">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    class="h-4 w-4 text-primary"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </span>
                <span class="text-foreground">{feature}</span>
              </li>
            ))}
          </ul>

          <a
            href={WEB_DESIGN_SERVICE.ctaLink}
            class="shine-effect inline-flex items-center gap-2 rounded-full bg-primary px-8 py-4 font-semibold text-primary-foreground transition-all hover:scale-105 hover:bg-primary/90"
          >
            {WEB_DESIGN_SERVICE.cta}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="h-5 w-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
              />
            </svg>
          </a>
        </div>

        <!-- Visual/Illustration -->
        <div class="relative hidden lg:block">
          <div class="aspect-square rounded-2xl border border-border bg-gradient-to-br from-primary/5 to-primary/10 p-8">
            <!-- Device mockups -->
            <div class="relative h-full">
              <!-- Desktop mockup -->
              <div class="absolute left-0 top-0 w-3/4 rounded-lg border border-border bg-card p-2 shadow-lg">
                <div class="mb-2 flex gap-1.5">
                  <div class="h-2 w-2 rounded-full bg-red-500"></div>
                  <div class="h-2 w-2 rounded-full bg-yellow-500"></div>
                  <div class="h-2 w-2 rounded-full bg-green-500"></div>
                </div>
                <div class="space-y-2">
                  <div class="h-3 w-1/2 rounded bg-muted"></div>
                  <div class="h-24 rounded bg-gradient-to-br from-primary/20 to-primary/5"></div>
                  <div class="h-2 w-3/4 rounded bg-muted"></div>
                  <div class="h-2 w-1/2 rounded bg-muted"></div>
                </div>
              </div>

              <!-- Mobile mockup -->
              <div class="absolute bottom-0 right-0 w-1/3 rounded-xl border border-border bg-card p-2 shadow-lg">
                <div class="mb-2 flex justify-center">
                  <div class="h-1 w-8 rounded-full bg-muted"></div>
                </div>
                <div class="space-y-2">
                  <div class="h-16 rounded bg-gradient-to-br from-primary/20 to-primary/5"></div>
                  <div class="h-2 w-3/4 rounded bg-muted"></div>
                  <div class="h-2 w-1/2 rounded bg-muted"></div>
                  <div class="h-6 w-full rounded bg-primary/30"></div>
                </div>
              </div>

              <!-- Floating elements -->
              <div class="absolute right-1/4 top-1/4 h-12 w-12 animate-float rounded-lg bg-primary/20 shadow-lg"></div>
              <div class="absolute bottom-1/3 left-1/4 h-8 w-8 animate-float-delayed rounded-full bg-primary/30 shadow-lg"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
